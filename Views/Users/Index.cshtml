@{    
    ViewBag.Title = "Utilizatori";
}

<h1 class="d-flex flex-row justify-content-center m-5 text-light">@ViewBag.Title</h1>

@foreach (var user in ViewBag.Users ){

    <div class="card">
        <div class="card-body">
            <h3 class="card-title d-flex flex-fill justify-content-center align-items-center py-3 px-3 rounded-2 text-light" style="background-color: var(--bs-dark) !important;">@user.UserName</h3>
        </div>

        <div class="card-footer">
            <div class="d-flex align-items-center">
                <div class="d-flex flex-fill justify-content-center align-items-center m-1">
                    <a class="btn btn-success" href="/Users/Edit/@user.Id"><i class="bi bi-pencil-square pe-2"></i>Editare rol utilizator</a>
                </div>

                <div class="d-flex flex-fill justify-content-center align-items-center m-1">
                    <form method="post" action="/Users/Delete/@user.Id">
                        <button class="btn btn-danger" type="submit"><i class="bi bi-trash pe-2"></i>Stergere utilizator</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <br/>
}


