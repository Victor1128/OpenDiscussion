@model OpenDiscussion.Models.Category

<h1 class="d-flex flex-row justify-content-center m-5 text-light">@Model.CategoryName</h1>


@foreach (OpenDiscussion.Models.Topic top in @Model.Topics ?? new List<Topic>())
{
    <div class="card">
        <a class="btn btn-block" href="/Topics/Show/@top.Id">
        @Html.Partial("TopicInfo", top)    
        </a>
    </div>

    <br/>
    <br/>
}

