@model OpenDiscussion.Models.Topic

@{
    ViewBag.Title = "Show";
}

<h2> Afisare topic</h2>

<br />

<div class="card">
    @Html.Partial("TopicInfo", Model)

    @if ((ViewBag.AfisareButoane == true && Model.UserId == ViewBag.UserCurent) || ViewBag.EsteAdmin)
    {
        <div class="d-flex flex-row justify-content-between">
            <a class="btn btn-success m-4" href="/Topics/Edit/@Model.Id">Editeaza articol</a>
            <form method="post" action="/Topics/Delete/@Model.Id">
                <button class="btn btn-danger m-4" type="submit">Sterge articol</button>
            </form>
        </div>
    }
</div>

@foreach (var resp in Model.Responses)
{
    <div class="container m-3">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <p>@resp.Content</p>
                            <small>@resp.Date</small>
                            <strong><i class="bi bi-person px-2"></i>@resp.User.UserName</strong>
                        </div>

                        <br />

                        @if (resp.UserId == ViewBag.userCurent || ViewBag.EsteAdmin)
                        {
                            <div class="d-flex">
                                <div>
                                    <a class="btn btn-outline-primary" href="/Responses/Edit/@resp.Id"><i class="bi bi-pencil-square"></i>Editeaza</a>
                                </div>

                                <div>
                                    <form method="post" action="/Responses/Delete/@resp.Id">
                                        <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>
        </div>
    </div>
}

<div class="container m-3">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">
            <div class="card">
                <form method="post" action="/Topics/Show/@Model.Id">
                    <div class="card-body">

                        <input type="hidden" name="TopicId" value="@Model.Id" />

                        <label>Continut raspuns</label>
                        <br />

                        <textarea class="form-control" name="Content"></textarea>

                        @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

                        <br /><br />

                        <button class="btn btn-success" type="submit">Adauga raspuns</button>

                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-2"></div>
    </div>
</div>