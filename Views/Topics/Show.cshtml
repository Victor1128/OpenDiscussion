@model OpenDiscussion.Models.Topic

@{
    ViewBag.Title = "Show";
}

<div class="card">
    @Html.Partial("TopicInfo", Model)

    @if (ViewBag.AfisareButoane == true || Model.UserId == ViewBag.UserCurent)
    {
        <div class="d-flex flex-row justify-content-between">
            <a class="btn btn-success m-4" href="/Topics/Edit/@Model.Id">Editeaza articol</a>
            <form method="post" action="/Topics/Delete/@Model.Id">
                <button class="btn btn-danger m-4" type="submit">Sterge articol</button>
            </form>
        </div>
    }
</div>

@foreach (var resp in Model.Responses)
{
    <div class="container m-3">
        <div class="row">
            <div class="col-md-2"></div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div>
                            <p class="m-2">@resp.Content</p>
                            <div class="card-footer d-flex align-items-center justify-content-center rounded-2">
                                <small class="flex-fill">@resp.Date</small>
                                <strong class="flex-fill"><i class="bi bi-person px-2"></i>@resp.User.UserName</strong>
                            </div>
                        </div>

                        @if (ViewBag.AfisareButoane == true || resp.UserId == ViewBag.userCurent)
                        {
                            <div class="d-flex flex-row justify-content-between">
                                <a class="btn btn-outline-primary mt-3" href="/Responses/Edit/@resp.Id"><i class="bi bi-pencil-square"></i>Editeaza</a>
                                <form method="post" action="/Responses/Delete/@resp.Id">
                                    <button class="btn btn-outline-danger mt-3" type="submit"><i class="bi bi-trash"></i>Sterge</button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>
        </div>
    </div>
}

@if (User.Identity.IsAuthenticated)
{

<div class="container m-3">
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8">
            <div class="card">
                <form method="post" action="/Topics/Show/@Model.Id">
                    <div class="card-body">

                        <input type="hidden" name="TopicId" value="@Model.Id" />

                        <label class="p-2 rounded-2 d-flex align-items-center justify-content-center text-light" style="background-color: rgb(var(--bs-dark-rgb)) !important;">Continut raspuns</label>
                        
                        <br />

                        @Html.ValidationSummary(false, "", new { @class = "text-danger d-flex align-items-center justify-content-center" })

                            <textarea class="form-control d-flex align-items-center justify-content-center m-auto" style="width:90%; box-sizing:border-box !important;" name="Content"></textarea>
                        
                        <br />

                        @Html.ValidationMessage("Content", null, new { @class = "text-danger d-flex align-items-center justify-content-center" })

                        <br />

                        <div class="d-flex align-items-center">
                         <button class="btn btn-success flex-fill m-2" type="submit">Adauga raspuns</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-2"></div>
    </div>
</div>

}