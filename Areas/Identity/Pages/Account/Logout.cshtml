@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1 class="text-light d-flex justify-content-center align-items-center mb-4">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-danger text-light">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="text-light">You have successfully logged out of the application.</p>
        }
    }
</header>
