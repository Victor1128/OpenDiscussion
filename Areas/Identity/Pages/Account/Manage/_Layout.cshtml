@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h1 class="d-flex flex-row justify-content-center m-5 text-light">Manage your account</h1>

<div>
    <h2 class="d-flex flex-row justify-content-center text-light">Change your account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3 pe-5">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9 ps-5">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
