@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-light d-flex justify-content-center align-items-center mb-4">@ViewData["Title"]</h3>

<div class="row">
    <p class="text-light">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>

    <p class="text-light">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>

    <div class="d-flex mt-2">
        <div class="d-flex flex-fill justify-content-center align-items-center">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-success" type="submit">Download</button>
            </form>
        </div>

        <div class="d-flex flex-fill justify-content-center align-items-center">
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
